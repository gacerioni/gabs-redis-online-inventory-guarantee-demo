# Copy to .env and set your credentials

# Postgres (system of record)
PG_DSN=postgresql://USER:PASS@RDS_HOST:5432/DB?sslmode=require

# Redis (operational store)
REDIS_URL=redis://localhost:6379/0

# Optional tuning
HOLD_TTL_SECONDS_DEFAULT=600
REAPER_INTERVAL_SECS=1
ENABLE_EVENTS_STREAM=true
EVENTS_STREAM_NAME=inv:events
STRICT_UUID=true

# Optional key naming
INV_PREFIX=inventory:sku_id:
HOLD_PREFIX=hold:
HOLDS_ZSET=holds:exp
